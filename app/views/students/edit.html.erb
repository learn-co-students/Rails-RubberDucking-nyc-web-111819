<h1> Edit Student Form </h1>

<% if flash[:messages] %>
  <h2>Errors</h2>
  <ul>
    <% flash[:messages].each do |error| %>
      <li><%= error %> </li>
    <% end%>
  </ul>
<% end%> 

<%= form_for @student do |f| %>
    <p><%= f.label :name %></p>
    <p><%= f.text_field :name %></p>
    <p><%= f.label :mod %></p>
    <p><%= f.number_field :mod  %></p>
    <p><%= f.submit %></p>

<% end %>